{
  "id": "gcloud-cli",
  "version": "1.0.0",
  "name": "Google Cloud CLI",
  "description": "Installs Google Cloud CLI (gcloud) for GCP operations.",
  "documentationURL": "https://github.com/jasonchaffee/devcontainers/tree/main/features/gcloud-cli",
  "dependsOn": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installOhMyZsh": false,
      "installOhMyZshConfig": false
    }
  },
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "gcloud CLI version to install"
    },
    "installCrc32c": {
      "type": "boolean",
      "default": true,
      "description": "Install gcloud-crc32c (highly recommended for large file transfers)"
    },
    "installGkeGcloudAuthPlugin": {
      "type": "boolean",
      "default": true,
      "description": "Install gke-gcloud-auth-plugin (required for GKE 1.26+)"
    },
    "installSkaffold": {
      "type": "boolean",
      "default": true,
      "description": "Install skaffold"
    },
    "installKubectl": {
      "type": "boolean",
      "default": false,
      "description": "Install kubectl"
    },
    "installAnthosAuth": {
      "type": "boolean",
      "default": false,
      "description": "Install anthos-auth"
    },
    "installBeta": {
      "type": "boolean",
      "default": false,
      "description": "Install gcloud beta components"
    },
    "installAlpha": {
      "type": "boolean",
      "default": false,
      "description": "Install gcloud alpha components"
    },
    "installPubsubEmulator": {
      "type": "boolean",
      "default": false,
      "description": "Install pubsub-emulator"
    },
    "installCloudSpannerEmulator": {
      "type": "boolean",
      "default": false,
      "description": "Install cloud-spanner-emulator"
    },
    "installBigtable": {
      "type": "boolean",
      "default": false,
      "description": "Install bigtable (emulator and tools)"
    },
    "installAppEngineJava": {
      "type": "boolean",
      "default": false,
      "description": "Install app-engine-java"
    },
    "installTerraformTools": {
      "type": "boolean",
      "default": false,
      "description": "Install terraform-tools"
    },
    "installKpt": {
      "type": "boolean",
      "default": false,
      "description": "Install kpt"
    },
    "installComponents": {
      "type": "string",
      "default": "",
      "description": "Additional comma-separated list of components to install"
    }
  }
}
