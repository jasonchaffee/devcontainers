{
  "id": "gcloud-cli",
  "version": "1.0.1",
  "name": "Google Cloud CLI",
  "description": "Installs Google Cloud CLI (gcloud) for GCP operations.",
  "documentationURL": "https://github.com/jasonchaffee/devcontainers/tree/main/features/gcloud-cli",
  "dependsOn": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installOhMyZsh": false,
      "installOhMyZshConfig": false
    }
  },
  "options": {
    "version": {
      "type": "string",
      "default": "latest",
      "description": "gcloud CLI version to install"
    },
    "installCrc32c": {
      "type": "boolean",
      "default": true,
      "description": "Install gcloud-crc32c (recommended for performance)"
    },
    "installGkeGcloudAuthPlugin": {
      "type": "boolean",
      "default": true,
      "description": "Install gke-gcloud-auth-plugin (required for GKE 1.26+)"
    },
    "installSkaffold": {
      "type": "boolean",
      "default": false,
      "description": "Install skaffold"
    },
    "installKubectl": {
      "type": "boolean",
      "default": false,
      "description": "Install kubectl"
    },
    "installBeta": {
      "type": "boolean",
      "default": false,
      "description": "Install gcloud beta commands"
    },
    "installAlpha": {
      "type": "boolean",
      "default": false,
      "description": "Install gcloud alpha commands"
    },
    "installEmulators": {
      "type": "boolean",
      "default": false,
      "description": "Install emulators (Pub/Sub, Spanner, Bigtable)"
    },
    "installAppEngineJava": {
      "type": "boolean",
      "default": false,
      "description": "Install app-engine-java extensions"
    },
    "installTerraformTools": {
      "type": "boolean",
      "default": false,
      "description": "Install terraform-tools"
    },
    "installComponents": {
      "type": "string",
      "default": "",
      "description": "Additional comma-separated components to install"
    }
  }
}
