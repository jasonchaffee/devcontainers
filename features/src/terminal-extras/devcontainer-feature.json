{
  "id": "terminal-extras",
  "version": "1.0.0",
  "name": "Terminal Extras",
  "description": "Terminal utilities: tmux (multiplexer), btop (system monitor), viddy (modern watch), ttyd (terminal over web)",
  "documentationURL": "https://github.com/jasonchaffee/devcontainers/tree/main/features/terminal-extras",
  "dependsOn": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installOhMyZsh": false,
      "installOhMyZshConfig": false
    }
  },
  "options": {
    "installTmux": {
      "type": "boolean",
      "default": true,
      "description": "Install tmux (terminal multiplexer)"
    },
    "installBtop": {
      "type": "boolean",
      "default": true,
      "description": "Install btop (modern system monitor)"
    },
    "installViddy": {
      "type": "boolean",
      "default": true,
      "description": "Install viddy (modern watch command)"
    },
    "installTtyd": {
      "type": "boolean",
      "default": false,
      "description": "Install ttyd (terminal over web)"
    }
  }
}
